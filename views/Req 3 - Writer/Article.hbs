    <!-- ##### Post Details Area Start ##### -->
    <section class="post-details-area">
        <div class="container">
            

            <div class="row justify-content-center">
                <!-- Post Details Content Area -->
                <div class="col-12 col-xl-8">
                    <div class="post-details-content bg-white mb-30 p-30 box-shadow">
                        <div class="blog-content">
                            <div>
                                <div><input readonly type="date"  class="form-control" data-date="" data-date-format="DD MMMM YYYY" value="{{this.article.datePost}}"></div>
                                <div style="color:#dc3545; font-size: 15px; margin-bottom: 13px;">Category: {{article.name}}</div>
                            </div>
                    
                            <h4 class="post-title" style="font-size: 20px; ">Title: {{article.title}}</h4>
                            <!-- Post Meta -->
                            
                            <textarea id="txtFullDes1">{{article.content}}</textarea>
                            <div style="color:#dc3545; font-size: 15px; margin-bottom: 13px;">Summary:</div>
                            <blockquote style="margin-bottom:10px;">
                                <h6 class="quote-text">{{article.summary}}</h6>
                            </blockquote>

            

                            <!-- Post Author -->
                            <div class="post-author d-flex align-items-center">
                                <div class="post-author-thumb">
                                    <img src="../../img/bg-img/52.jpg" alt="">
                                </div>
                                <div class="post-author-desc pl-4">
                                    <a href="#" class="author-name">Alan Shaerer</a>

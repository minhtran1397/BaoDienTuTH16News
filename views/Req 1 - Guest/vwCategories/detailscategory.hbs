<script src="http://1892.yn.lt/blogger/JQuery/Pagging/js/jquery.twbsPagination.js" type="text/javascript"></script>

<script>

$(function () {
    var pageSize = 4;
    showPage = function (page) {
        $(".contentPagedml2").hide();
        $(".contentPagedml2").removeClass("d-flex").addClass("d-none");
        $(".contentPagedml2").each(function (n) {
            if (n >= pageSize * (page - 1) && n < pageSize * page){
                $(this).show();
                $(this).addClass("d-flex").removeClass("d-none");}
        });
    }
    showPage(1);
    
    var totalRows = $("#total2").val();
    console.log(totalRows+'aaaaaaaaaaaa');
    if(totalRows%4 !=0)
    	var btnPage = totalRows/4+1;
    else 
    	var btnPage = totalRows/4;
    var iTotalPages = Math.ceil(totalRows / pageSize);

    var obj = $('#pagination2').twbsPagination({
        totalPages: iTotalPages,
        visiblePages: btnPage,
        onPageClick: function (event, page) {
            console.info(page);
            showPage(page);
        }
    });
    console.info(obj.data());
}); 
</script>